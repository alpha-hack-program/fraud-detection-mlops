apiVersion: tekton.dev/v1
kind: Pipeline
metadata:
  name: pipeline-run-pipeline-one
  namespace: fraud
spec:
  params:
    - description: Model version
      name: MODEL_VERSION
      type: string
      default: '1' 
    - description: Card transaction data
      name: CARDTRANSDATA
      type: string
    - name: GIT_REPO
      type: string
      default: "https://github.com/alpha-hack-program/fraud-detection-mlops.git"
    - name: GIT_REVISION
      type: string
      default: "HEAD"
    - name: GIT_SSL_VERIFY
      type: string
      default: 'true'  
    - name: GIT_USER_NAME
      value: $(params.GIT_USER_NAME)
      default: 'davidseve'  
    - name: GIT_USER_EMAIL
      value: $(params.GIT_USER_EMAIL)   
      default: 'davidseve16@gmail.com'               
  tasks:
    - name: kfp-run-pipelines
      taskRef:
        kind: Task
        name: kfp-run-pipelines
      params:
        - name: CARDTRANSDATA
          value: $(params.CARDTRANSDATA)
        - name: MODEL_VERSION
          value: $(params.MODEL_VERSION)    

    - name: fetch-repository
      timeout: 10m0s
      params:
        - name: URL
          value: $(params.GIT_REPO)
        - name: REVISION
          value: $(params.GIT_REVISION)
        - name: DELETE_EXISTING
          value: 'true'
        - name: SSL_VERIFY
          value: $(params.GIT_SSL_VERIFY)
      taskRef:
        params:
          - name: name
            value: git-clone
          - name: namespace
            value: openshift-pipelines
        resolver: cluster
      workspaces:
        - name: output
          workspace: workspace-source

    - name: change-inference-version
      runAfter:
      - fetch-repository
      params:
        - name: MODEL_VERSION
          value: $(params.MODEL_VERSION)
      taskSpec:
        metadata: {}
        params:
        - name: MODEL_VERSION
          type: string
        spec: null
        steps:
        - name: change-inference-version
          image: registry.access.redhat.com/ubi8/ubi-minimal:8.3

          script: |
            #!/usr/bin/env bash
            cd $(workspaces.source.path)/gitops/inference
            sed -i 's/^\(\s*version:\s*\)1$/\1$(MODEL_VERSION)/' values-inference.yaml 
            cat values-inference.yaml
        workspaces:
        - name: source
      workspaces:
      - name: source
        workspace: workspace-source                
  
    - name: commit-change-inference-version
      runAfter:
      - change-inference-version
      taskRef:
        params:
          - name: name
            value: git-cli
          - name: namespace
            value: openshift-pipelines
        resolver: cluster      
      params:
        - name: GIT_USER_NAME
          value: $(params.GIT_USER_NAME)
        - name: GIT_USER_EMAIL
          value: $(params.GIT_USER_EMAIL)
        - name: GIT_SCRIPT
          value: |
            cd $(workspaces.source.path)/gitops/inference
            git add values-inference.yaml
            git commit -m "Change inference version to $(params.MODEL_VERSION)"
            git push origin $(params.GIT_REVISION):$(params.GIT_REPO)
      workspaces:
      - name: source
        workspace: workspace-source 

  workspaces:
    - name: workspace-source   

